<Window x:Class="KidsOrganizationApp.UI.View.ParentChildView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Организация" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Родители -->
        <GroupBox Header="Родители" Grid.Column="0" Margin="5">
            <ListView ItemsSource="{Binding Parents}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ФИО" Width="200"
                                        DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Дата рождения" Width="120"
                                        DisplayMemberBinding="{Binding DateBirth}" />
                        <GridViewColumn Header="Кол-во детей" Width="100"
                                        DisplayMemberBinding="{Binding ChildrenCount}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Дети -->
        <GroupBox Header="Дети" Grid.Column="1" Margin="5">
            <ListView ItemsSource="{Binding Children}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ФИО" Width="200"
                                        DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Дата рождения" Width="120"
                                        DisplayMemberBinding="{Binding DateBirth}" />
                        <GridViewColumn Header="Кол-во родителей" Width="120"
                                        DisplayMemberBinding="{Binding ParentsCount}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

    </Grid>
</Window>
